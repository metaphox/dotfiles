#!/bin/bash

# Display colorized information output
function cinfo() {
    COLOR='\033[01;33m' # bold yellow
    RESET='\033[00;00m' # normal white
    MESSAGE=${@:-"${RESET}Error: No message passed"}
    echo -e "${COLOR}${MESSAGE}${RESET}"
}
 
# Display colorized warning output
function cwarn() {
    COLOR='\033[01;31m' # bold red
    RESET='\033[00;00m' # normal white
    MESSAGE=${@:-"${RESET}Error: No message passed"}
    echo -e "${COLOR}${MESSAGE}${RESET}"
}

cinfo "brew update"
brew update
brew upgrade
brew cleanup
brew doctor

cinfo "pythonz upgrade"
pythonz update
pythonz cleanup

cinfo "rvm upgrade"
rvm get stable
rvm cleanup all

echo "you may need to do rvm reload for current shell"
