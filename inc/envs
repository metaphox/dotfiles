# Environment variables common to zsh and bash
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

# common PATH
PATH=$HOME/bin:$HOME/dotfiles/bin:/usr/local/sbin:$HOME/Library/Python/2.7/bin:$PATH

# Swift
if [ ${platform:=linux} = 'osx' ]; then
    PATH=/Library/Developer/Toolchains/swift-latest.xctoolchain/usr/bin:$HOME/usr/local/miniconda3/bin:$PATH
fi

#Golang
export GOPATH=$HOME/code/golang/go

#Java stuff
export JAVA_HOME=$(/usr/libexec/java_home -v 1.8)

#Editor
export EDITOR=/usr/local/bin/vim
