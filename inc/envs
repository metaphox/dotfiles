# Environment variables common to zsh and bash

export LANG=en_US.UTF-8

PATH=$HOME/bin:$HOME/dotfiles/bin:/usr/local/sbin:/usr/local/bin:$PATH
PATH=$PATH:/usr/local/go/bin
PATH=$PATH:$HOME/bin/android-sdk/sdk/tools
PATH=$PATH:$HOME/bin/android-sdk/sdk/platform-tools
export PATH

#pkg_config
export PKG_CONFIG_PATH=/usr/local/Library/ENV/pkgconfig/10.9:/usr/local/lib/pkgconfig:/usr/local/lib:$PKG_CONFIG_PATH

#Golang
export GOROOT=/usr/local/go
export GOPATH=$HOME/code/golang/go

#Java stuff
export JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Home
export ANT_OPTS=-Xmx2g
export MAVEN_OPTS="-Xmx2g -XX:MaxPermSize=256m"
export M2_HOME=/usr/local/maven/libexec

#Editor
export EDITOR=/usr/local/bin/vim
