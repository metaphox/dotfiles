# Environment variables common to zsh and bash
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

# common PATH
PATH=$HOME/bin:$HOME/dotfiles/bin:/usr/local/sbin:/usr/local/sbin:$PATH

# Swift
if [ ${platform:=linux} = 'osx' ]; then
    PATH=/Library/Developer/Toolchains/swift-latest.xctoolchain/usr/bin:$PATH
fi

#Golang
export GOPATH=$HOME/code/golang/go
