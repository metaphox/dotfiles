# functions

### serve the current directory
function serve {
  port="${1:-3000}"
  ruby -r webrick -e "s = WEBrick::HTTPServer.new(:Port => $port, :DocumentRoot => Dir.pwd); trap('INT') { s.shutdown }; s.start"
}

### search google
function google() {
    open /Applications/Google\ Chrome.app/ "http://www.google.com/search?q=$1";
}

